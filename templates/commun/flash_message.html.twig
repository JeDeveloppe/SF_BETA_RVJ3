{# read and display all flash messages #}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="row">
                <div class="col-11 mx-auto mt-3 mt-md-5 py-3 text-center alertDiv bg-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
