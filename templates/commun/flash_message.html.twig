{# read and display all flash messages #}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="row">
                <div class="col-12 p-0 text-end alertDiv bg-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
