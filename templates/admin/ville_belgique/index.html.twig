{% extends 'admin/base.html.twig' %}

{% block title %}Villes de Belgique{% endblock %}

{% block body %}
    <h1 class="col-12 text-center my-5">Villes de Belgique</h1>

    <table class="table table-responsive text-center align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>VilleCodePostal</th>
                <th>VilleNom</th>
                <th>Lng</th>
                <th>Lat</th>
                <th>VilleProvince</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville_belgique in ville_belgiques %}
            <tr>
                <td>{{ ville_belgique.id }}</td>
                <td>{{ ville_belgique.villeCodePostal }}</td>
                <td>{{ ville_belgique.villeNom }}</td>
                <td>{{ ville_belgique.lng }}</td>
                <td>{{ ville_belgique.lat }}</td>
                <td>{{ ville_belgique.villeProvince }}</td>
                <td>
                    <a href="{{ path('app_ville_belgique_show', {'id': ville_belgique.id}) }}">show</a>
                    <a href="{{ path('app_ville_belgique_edit', {'id': ville_belgique.id}) }}">edit</a>
                </td>
                <td>
                    <a href="https://www.google.fr/maps/place/{{ville_belgique.villeCodePostal}}+{{ville_belgique.villeNom}}" target="_blank">Google Maps</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if ville_belgiques | length > 0 %}
        <div class="row my-5">
            <div class="col-12 d-flex justify-content-center">
                {{ knp_pagination_render(ville_belgiques, 'admin/pagination.html.twig') }}
            </div>
        </div>
    {% endif %}

    <a href="{{ path('app_ville_belgique_new') }}">Create new</a>
{% endblock %}
