{% extends 'admin/base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <h1 class="col-12 text-center my-5">Liste des utilisateurs</h1>

    <table class="table table-responsive text-center align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Level</th>
                <th>Pseudo</th>
                <th>Téléphone</th>
                <th>Inscription le:</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>[{{ user.id }}]</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_SUPER_ADMIN" %}
                            <span class="badge rounded-pill bg-danger">SUPER ADMIN</span>
                        {% elseif role == "ROLE_ADMIN" %}
                            <span class="badge rounded-pill bg-warning">ADMIN</span>
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ user.level }}</td>
                <td>{{ user.nickname }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y à H:i:s') : '' }}</td>
                <td>
                    {% if app.user.id != user.id %}
                        {% if app.user.level > user.level %}
                            <a class="btn btn-sm btn-warning" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Éditer</a>
                        {% else %}
                            <a class="btn btn-sm btn-primary" href="#">Level insuffisant</a>
                        {% endif %}
                    {% else %}
                        ###
                    {% endif %}
                    

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
