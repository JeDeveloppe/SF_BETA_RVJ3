{% extends 'admin/base.html.twig' %}

{% block title %}Liste des pays dans la base{% endblock %}

{% block body %}
    <h1 class="col-12 text-center my-5">Liste des pays dans la base</h1>

    <div class="col-6 my-5">
        <a class="btn btn-info" href="{{ path('app_pays_new') }}">Cr√©er un nouveau pays +</a>
     </div>

    <table class="table table-responsive text-center align-middle">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsoCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.name }}</td>
                <td>{{ pay.isoCode }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_pays_edit', {'id': pay.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
