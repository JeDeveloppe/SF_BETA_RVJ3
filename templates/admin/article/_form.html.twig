{{ form_start(form) }}
    <div class="row justify-content-center">
        <div class="col-10 d-flex flex-wrap justify-content-around">
            <div class="col-11 mb-3">
                <label class="form-label">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name) }}
            </div>
            <div class="col-2 mb-3">
                <label class="form-label">{{ form_label(form.envelope) }}</label>
                {{ form_widget(form.envelope) }}
            </div>
            <div class="col-2 mb-3">
                <label class="form-label">{{ form_label(form.quantity) }}</label>
                {{ form_widget(form.quantity) }}
            </div>
            <div class="col-2 mb-3">
                <label class="form-label">{{ form_label(form.weight) }}</label>
                {{ form_widget(form.weight) }}
            </div>
            <div class="col-2 mb-3">
                <label class="form-label">{{ form_label(form.priceHt) }}</label>
                {{ form_widget(form.priceHt) }}
            </div>
            <div class="col-11 mb-3 ">
                <label class="form-label">{{ form_label(form.dimension) }}</label>
                {{ form_widget(form.dimension) }}
            </div>
            <div class="col-6 mt-4">
                    {{ form_rest(form) }}
            </div>

            {# <div class="col-8 mx-auto">
                {% for boite in form.boite %}
                    <div class="col-2 card m-1 p-2">
                        {{ form_label(boite) }}
                        {{ form_widget(boite)}}
                    </div>
                {% endfor %}
            </div> #}
        </div>
    </div>
    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
