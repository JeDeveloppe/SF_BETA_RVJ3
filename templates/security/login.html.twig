{% extends 'site/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<h1 class="h3 my-5 col-12 text-center">Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="my-3 text-center">
            Vous êtes connecté(e) en tant que:<br/>
            {{ app.user.username }},<br/>
            <a href="{{ path('app_logout') }}">Se déconnecter !</a>
        </div>
    {% endif %}

<form method="post" class="row mb-5 align-items-center">
    <div class="col-11 col-md-9 col-lg-5 mx-auto text-center bg-white border rounded py-4">
        <div class="row">
            <div class="col-8 mx-auto">
                <label for="inputEmail">Email:</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>
            </div>
            <div class="col-8 mx-auto">
                <label for="inputPassword">Mot de passe:</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
        </div>
        
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-lg btn-primary mt-5">Se connecter</button>
    </div>
</form>










{% endblock %}
