{% set totalOccasions = 0 %}

<div class="row justify-content-center mb-4">
    <h3>Occasion(s):</h3>
    <div class="col-11 col-8 card">
        <table class="table table-striped text-center">
            <thead>
                <th>Nom / Éditeur / Année</th>
                <th>Référence</th>
                <th>Quantité</th>
                <th>Prix de vente TTC</th>
            </thead>
            <tbody>
                {% for occasion in occasions %}
                    <tr>
                        <td>{{ occasion.occasion.boite.nom }} - {{ occasion.occasion.boite.editeur }} - {{ occasion.occasion.boite.annee }}</td>
                        <td>{{ occasion.occasion.reference }}</td>
                        <td>1</td>
                        <td>{{ (occasion.occasion.priceHt * tva / 100) | number_format(2, '.', ',')  }} €</td>
                        {% set totalOccasions = totalOccasions + occasion.occasion.priceHt %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>