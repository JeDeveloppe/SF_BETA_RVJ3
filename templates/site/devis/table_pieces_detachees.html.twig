<div class="row justify-content-center mb-5">
    <h3 class="col-12 text-start">Pièces détachée(s):</h3>

        {% for boite in boites %}
            <div class="col-11 card my-2">
                <table class="table bg-white">
                    <thead>
                        <th>{{ boite.boite.nom }} {{ boite.boite.editeur }} {{ boite.boite.annee }}</th>
                        <th class="text-end">Prix TTC</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Votre demande: {{ boite.message }}</td>
                        </tr>
                        <tr>
                            <td>Ma réponse: {{ boite.reponse }}</td>
                            <td class="text-end display-6">{{ (boite.prixVente / 100) |number_format(2, '.', ',') }} €</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        {% endfor %}

</div>

