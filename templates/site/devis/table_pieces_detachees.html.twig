<div class="row justify-content-center mb-5">
    <h3 class="col-12 text-start">Pièces détachée(s):</h3>

        {% for boite in boites %}
            <div class="col-9">
                <table class="table table-bordered">
                    <thead>
                        <th>{{ boite.boite.nom }} {{ boite.boite.editeur }} {{ boite.boite.annee }}</th>
                        <th>Prix TTC</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Votre demande: {{ boite.message }}</td>
                            <td rowspan="2">{{ (boite.prixVente / 100) |number_format(2, '.', ',') }}</td>
                        </tr>
                        <tr>
                            <td>Ma réponse: {{ boite.reponse }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        {% endfor %}

</div>

