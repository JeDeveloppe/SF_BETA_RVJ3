{% extends 'site/base.html.twig' %}

{% block title %}Catalogue des jeux d'occasion{% endblock %}

{% block body %}

    {% set tva = informationsLegales[0].TauxTva() %}

    <h1 class="col-12 text-center my-5">Catalogue des jeux d'occasion</h1>
    
{% if occasions | length > 0 %}
    <div class="col-12 text-center mb-2">
        {% set url = path('catalogue_jeux_occasion') %}
        {% include "site/components/catalogues/share_buttons.html.twig" %}
    </div>

    <div class="row my-4">
    <p>Critères de recherche:</p>
        {{ form_start(form) }}
            <div class="col-12 d-flex flex-wrap">
                <div class="col-9 col-sm-5 col-md-2 mx-auto">{{ form_row(form.nom) }}</div>
                <div class="col-9 col-sm-5 col-md-2 mx-auto">{{ form_row(form.nbrJoueurs) }}</div>
                <div class="col-9 col-sm-5 col-md-2 mx-auto">{{ form_row(form.age) }}</div>
                <div class="btn-group col-9 col-sm-5 col-md-2 mx-auto">
                    <button class="btn btn-success" type="submit" class="btn btn-primary">Recherche</button>
                    <a class="btn btn-warning pt-sm-3" href="{{ path('catalogue_jeux_occasion') }}">Remise à zéro</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="row">
        {% for occasion in occasions %}
            <div class="col-9 col-sm-6 mx-auto col-md-6 p-1 p-md-4 p-lg-1 col-xl-4 my-3">

                <div class="card col-12 h-100 p-0">
                    <div class="card-header bg-secondary text-white col-12 p-1 d-flex flex-column justify-content-center align-items-center">
                        <div class="">{{ occasion.boite.nom }}</div>
                        <div class="">{{ occasion.boite.editeur }}</div>
                        <div class="">{{ occasion.boite.annee }}</div>
                    </div>
                    <div class="card-body d-flex flex-column flex-lg-row flex-wrap justify-content-between align-items-center">
                        <div class="col-12 mb-1 text-center small">
                            {% include "site/components/catalogues/affichage_nbrJoueurs-age.html.twig" %}
                        </div>
                        {# image #}
                        <div class="col-12 col-lg-6">
                            <div class="col-12 p-0 d-flex flex-column justify-content-center align-items-center h-100">
                                <img class="full-width" src="data:image/png;base64,{{ occasion.boite.imageblob }}"/>
                                  <span class="text-muted small text-center">
                                    Photo non contractuelle
                                </span>
                            </div>
                        </div>
                        {# informations #}
                        <div class="col-12 mt-3 col-lg-6">
                            <div class="col-12 text-end">
                                <a href="{{ path('catalogue_jeux_occasion_details',  {'id': occasion.id, 'slug':occasion.boite.nom | lower | slug, 'editeur': occasion.boite.editeur | lower | slug }) }}">Voir plus...</a>
                            </div>
                            <div class="col-12 text-center my-2">Prix TTC: {{ (occasion.priceHt * tva / 100) | number_format(2, ',', '.') }} €</div>
                            {# on inclus le bouton login/register/panier #}
                            {% include "site/components/catalogues/button-connexion-inscription-panier.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
 
    {% if occasions | length > 0 %}

        <div class="row my-5">
            <div class="col-12 d-flex justify-content-center">
                {{ knp_pagination_render(occasions, 'site/components/catalogues/pagination.html.twig') }}
            </div>
        </div>
        
    {% endif %}
{% else %}

    <div class="row">
        <div class="col-12 text-center">
            <p class="h2">Nous n'avons pas ce jeu en stock pour le moment.</p>
            <p class="h5">Vous pouvez suivre nos arrivages sur la page <a href="https://www.refaitesvosjeux.fr" target="_blank">Facebook !</a></p> 
            <p class="h5">Retenter avec moins de filtres...<a class="btn btn-warning" href="{{ path('catalogue_jeux_occasion') }}">Supprimer les filtres</a></p>

            <p class="h5 mt-5">Ou tenter votre chance chez l'un de nos partenaires:</p>
        </div>
    </div>
    <div class="row justify-content-start mb-5">

        {% for partenaire in partenaires %}

        {% include "site/components/catalogues/card-partenaire.html.twig" %}
            
        {% endfor %}
    </div>
{% endif %}

{% endblock %}
