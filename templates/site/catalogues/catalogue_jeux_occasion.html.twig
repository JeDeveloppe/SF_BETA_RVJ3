{% extends 'site/base.html.twig' %}

{% block title %}Catalogue des jeux d'occasion{% endblock %}

{% block body %}
    <h1 class="col-12 text-center my-5">Catalogue des jeux d'occasion</h1>

    <div class="row">
        {% for occasion in occasions %}
            <div class="col-12 p-2 col-sm-6 col-md-4 col-lg-3">
                <div class="card col-12 p-0 h-100">
                    <div class="card-header text-center">
                        {{ occasion.boite.nom }} <br/>
                        {{ occasion.boite.editeur }} - {{ occasion.boite.annee }}
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between align-items-center">
                        <p class="d-flex justify-content-center align-items-center">
                            <img src="data:image/jpeg;charset=utf-8;base64, {{ occasion.boite.imageBlob }}" alt="{{ occasion.boite.nom }} - {{ occasion.boite.annee }}" />
                        </p>
                        <p>Prix TTC: {{ (occasion.priceHt * tva) | number_format(2, '.', ',') }}</p>
              
                    </div>
                    <div class="col-12 text-center mb-2">
                        <a class="btn btn-primary" href="{{ path('catalogue_jeux_occasion_details',  {'id': occasion.id, 'slug':occasion.boite.nom | lower | slug, 'editeur': occasion.boite.editeur | lower | slug }) }}">Voir</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
 
    {% if occasions | length > 0 %}
         <div class="col-12 d-flex justify-content-center py-5">
            {{ knp_pagination_render(occasions, 'site/pagination.html.twig') }}
        </div>
    {% endif %}


{% endblock %}
