{% extends 'site/base.html.twig' %}

{% block title %}Catalogue des jeux d'occasion{% endblock %}

{% block body %}

    {% set tva = informationsLegales[0].TauxTva() %}

    <h1 class="col-12 text-center my-5">Catalogue des jeux d'occasion</h1>

    <div class="row">
        {% for occasion in occasions %}
            <div class="col-12 p-1 col-md-6 col-lg-4 col-xl-3">
                <div class="card col-12 h-100">
                    <div class="card-header col-12 p-1 d-flex flex-column justify-content-center align-items-center">
                        <div class="">{{ occasion.boite.nom }}</div>
                        <div class="">{{ occasion.boite.editeur }}</div>
                        <div class="">{{ occasion.boite.annee }}</div>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between align-items-center">
                        <div class="col-12 mb-1 text-center small">
                            A partir de {{ occasion.boite.nbrJoueurs }} 
                            {% if occasion.boite.nbrJoueurs > 1 %}
                                joueurs
                            {% else %}
                                joueur
                            {% endif %}
                            et dès {{ occasion.boite.age }} ans.
                        </div>
                        <div class="d-flex justify-content-center align-items-center h-100">
                            {# <img src="data:image/png;base64,{{ images[key] }}"/> #}
                            <img src="data:image/png;base64,{{ occasion.boite.imageblob }}"/>
                        </div>
                
                        <div class="col-12 mt-3">
                            <div class="col-12 text-muted small text-center mb-4">
                                Photo non contractuelle
                            </div>
                            {# <div>État de la boite: {{ occasion.etatBoite }}</div>
                            <div>État du matériel: {{ occasion.etatMateriel }}</div>
                            <div>Règle du jeu: {{ occasion.regleJeu }}</div> #}
                            <div class="col-12 text-end">
                                <a href="{{ path('catalogue_jeux_occasion_details',  {'id': occasion.id, 'slug':occasion.boite.nom | lower | slug, 'editeur': occasion.boite.editeur | lower | slug }) }}">Voir plus...</a>
                            </div>
                            <div class="col-12 text-center my-2">Prix TTC: {{ (occasion.priceHt * tva / 100) | number_format(2, ',', '.') }} </div>

                            {# on inclus le bouton login/register/panier #}
                            {% include "site/components/catalogues/button-connexion-inscription-panier.html.twig" %}

                        </div> 
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
 
    {% if occasions | length > 0 %}

        <div class="row my-5">
            <div class="col-12 d-flex justify-content-center">
                {{ knp_pagination_render(occasions, 'site/components/catalogues/pagination.html.twig') }}
            </div>
        </div>
        
    {% endif %}


{% endblock %}
