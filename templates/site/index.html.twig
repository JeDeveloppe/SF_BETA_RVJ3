{% extends 'site/base.html.twig' %}

{% block title %}Trouvez la pièce qu'il vous manque
{% endblock %}

{% block body %}

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v15.0" nonce="xIkP8yt2"></script>
    
    <div class="row pt-5">
        <div id="slogan" class="tracking-in-contract-bck-top text-center">Pièces détachées ET jeux complets</div>
    </div>

    <div class="row my-2 pt-3">
        {% include "site/components/index/_links.html.twig" %}
    </div>

    <div class="col-11 mx-auto display-6 mt-5">Les 10 dernières boites de pièces détachées ajoutées:</div>

    <div class="row mb-4 slider">
        {% set rang = 0 %}
        {% for lastEntry in lastEntries %}
            <a href="{{ path('catalogue_pieces_detachees_demande', {'id': lastEntry.id, 'slug':lastEntry.slug | lower, 'editeur': lastEntry.editeur | lower | slug }) }}" class="col-9 col-md-7 pt-3 text-decoration-none slider-lastEntry {% if rang == 0 %} active {% endif %}">
                <div class="card col-12 p-0 h-100">
                    <div class="card-body d-flex flex-wrap flex-column flex-md-row justify-content-between align-items-center">
                        <div class="d-flex justify-content-center align-items-center col-12 col-md-6">
                            <img class="img-fluid" src="data:image/png;base64,{{ lastEntry.imageblob }}"/>
                        </div>
                        <div class="col-12 mt-2 col-md-6 mt-md-0 text-center h5">
                            {{ lastEntry.nom }} <br/> {{ lastEntry.editeur }} <br/> {{ lastEntry.annee }}
                        </div>
                    </div>
                </div>
            </a>
        {% set rang = rang + 1 %}
        {% endfor %}
    </div>
    <div class="row">
        <div class="sliderArrows d-flex">
            <div class="precedent col-6 text-end p-1">
                <i class="fa-solid fa-circle-chevron-left"></i>
            </div>
            <div class="suivant col-6 text-start p-1">
                <i class="fa-solid fa-circle-chevron-right"></i>
            </div>
        </div>
    </div>

    <div class="row mt-2 mb-5">
        {% include "site/components/index/_stats.html.twig" %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/typewriter-effect@latest/dist/core.js"></script>
    <script>
        let lastEntries = document.getElementsByClassName('slider-lastEntry');
        let etape = 0;
        let nbrLastEntries = lastEntries.length;

        function deleteActiveLastEntries(){
            for(let i = 0; i < nbrLastEntries; i++){
                lastEntries[i].classList.remove('active');
            }
        }

        let precedent = document.querySelector('.precedent');
        let suivant = document.querySelector('.suivant');

        suivant.addEventListener('click', function(){
            etape++;
            if(etape >= nbrLastEntries){
                etape = 0;
            }
            deleteActiveLastEntries();
            lastEntries[etape].classList.add('active');
        })
        
        precedent.addEventListener('click', function(){
            etape--;
            if(etape < 0){
                etape = nbrLastEntries-1;
            }
            deleteActiveLastEntries();
            lastEntries[etape].classList.add('active');
        })

        setInterval(() => {
            etape++;
            if(etape >= nbrLastEntries){
                etape = 0;
            }
            deleteActiveLastEntries();
            lastEntries[etape].classList.add('active');
        }, 4000);
    </script>
    {{ encore_entry_script_tags('typeWriter') }}
{% endblock %}
