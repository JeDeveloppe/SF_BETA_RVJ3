{% set totalArticles = 0 %}

<div class="row justify-content-center mb-4">
    <h3>Article(s):</h3>
    <div class="col-11 col-8">
        <table class="table table-striped text-center">
            <thead>
                <th>Nom</th>
                <th>Référence</th>
                <th>Quantité</th>
                <th>Prix de vente TTC</th>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.article.name }}</td>
                        <td>{{ article.article.reference }}</td>
                        <td>{{ article.quantity }}</td>
                        <td>{{ (article.prixVente * tva / 100) | number_format(2, '.', ',')  }} €</td>
                        {% set totalArticles = totalArticles + article.prixVente %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>